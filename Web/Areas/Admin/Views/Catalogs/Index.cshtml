@model X.PagedList.IPagedList<Catalog>
@{
    ViewData["Title"] = "Katalog";
}

@* ************** Content ************** *@
<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Kataloglar /</span> 
</h4>

<!-- Basic Bootstrap Table -->
<div class="card">
    <div class="d-flex justify-content-between">
        <h5 class="card-header">Kataloglar</h5>
        <a type="button" class="btn btn-primary m-3" asp-action="Create">Ekle</a>
    </div>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>Adı</th>
                    <th>Kullanıcı</th>
                    <th>Oluş. Tarihi</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.User!.Name</td>
                        <td>@item.DateCreated.ToLocalTime().Date.ToShortDateString()</td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown"><i class="bx bx-dots-vertical-rounded"></i></button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-edit-alt me-1"></i> Düzenle</a>
                                    <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Sil</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
                
            </tbody>
        </table>
        
    </div>
</div>
<!--/ Basic Bootstrap Table -->

<div class="card mt-3">
    <div class="d-flex justify-content-center">
        <div class="col-lg-6">
            <div class="demo-inline-spacing">
                <!-- Basic Pagination -->
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <li class="page-item first">
                            <a class="page-link" asp-route-pageNumber = "1"><i class="tf-icon bx bx-chevrons-left"></i></a>
                        </li>
                        <li class="page-item prev">
                            <a class="page-link" asp-route-pageNumber="@(Model.PageNumber - 1 <= 0 ? 1 :Model.PageNumber - 1)"><i class="tf-icon bx bx-chevron-left"></i></a>
                        </li>
                        @for(int i = 1; i <= Model.PageCount; i++)
                        {
                            if(Model.PageNumber == i)
                            {
                                <li class="page-item active">
                                    <a class="page-link" asp-route-pageNumber = "@i">@i</a>
                                </li>
                            }
                            else
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-route-pageNumber="@i">@i</a>
                                </li>
                            }
                        }
                        <li class="page-item next">
                            <a class="page-link" asp-route-pageNumber="@(Model.PageNumber + 1 > Model.PageCount? Model.PageCount:Model.PageNumber + 1 )"><i class="tf-icon bx bx-chevron-right"></i></a>
                        </li>
                        <li class="page-item last">
                            <a class="page-link" asp-route-pageNumber="@Model.PageCount"><i class="tf-icon bx bx-chevrons-right"></i></a>
                        </li>
                    </ul>
                </nav>
                <!--/ Basic Pagination -->
            </div>
        </div>
    </div>
</div>


