@model OrderInputModel
@{
    ViewData["Title"] = "Yeni Kitap";
}

@* ************** Content ************** *@
<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Siparişler /</span> Siparişi Yola Çıkar
</h4>

<div class="card mb-4">
    <div class="card-body">
        <form asp-action="UpdateStatusToOnDelivery">
            <div class="mb-3">
                <label class="form-check-label" asp-for="CargoTrackingNumber"></label>
                <input type="text" class="form-control" asp-for="CargoTrackingNumber" />
                <span asp-validation-for="CargoTrackingNumber"></span>
            </div>
            <hr />
            <button type="submit" class="btn btn-primary">Gönder</button>
        </form>
    </div>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_DiscountScriptsPartial" />
}

