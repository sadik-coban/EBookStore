@model ProductInputModel
@{
    ViewData["Title"] = "Yeni Kitap";
}

@* ************** Content ************** *@
<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">Kitaplar /</span> Yeni Kitap Ekle
</h4>

<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Create" enctype="multipart/form-data">
            <partial name="_FieldsPartial" model="Model" />
            <hr />
            <button type="submit" class="btn btn-primary">Gönder</button>
        </form>
    </div>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
    <partial name="_DiscountScriptsPartial" />
}